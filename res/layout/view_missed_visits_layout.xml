<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ViewMissedVisitsLayout" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project"
        android:id="@+id/choose_project" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:stretchColumns="0,1,2,3">
        <TableRow>
            <TextView android:text="@string/name"
                android:id="@+id/name" />
            <TextView
                android:text="@string/date"
                android:gravity="center_horizontal"
                android:padding="3dip" />
            <TextView
                android:text="@string/number_missed"
                android:gravity="center_horizontal"
                android:padding="3dip" />
            <TextView
                android:text="@string/project"
                android:gravity="center_horizontal"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView android:padding="3dip"/>
            <TextView
                android:id="@+id/past_week_missed"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/past_week_received"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <TextView android:padding="3dip"/>
            <TextView
                android:id="@+id/past_month_missed"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/past_month_received"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <TextView android:padding="3dip"/>
            <TextView
                android:id="@+id/total_missed"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/total_received"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/total_future"
                android:gravity="center_horizontal"/>
        </TableRow>

    </TableLayout>


</LinearLayout>

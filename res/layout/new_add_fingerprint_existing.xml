<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/add_fingerprint_existing_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="6dp"
            android:text="@string/add_fingerprint_existing_header"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_first_name"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/first_name"
            android:layout_width="fill_parent"
            android:layout_below="@+id/textAddInfo"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/enter_maternal_name"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/maternal_name"
            android:layout_width="fill_parent"
            android:layout_below="@+id/textAddInfo"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/enter_paternal_name"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/paternal_name"
            android:layout_width="fill_parent"
            android:layout_below="@+id/textAddInfo"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/enter_dni"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/dni_document"
            android:layout_width="fill_parent"
            android:layout_below="@+id/enter_dni"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/enter_dob"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/dob"
            android:layout_width="fill_parent"
            android:layout_below="@+id/enter_dob"
            android:layout_alignParentLeft="true">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txt_assign_msg"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="21sp"
            android:background="@drawable/botonblanco"
            android:text="@string/search_patient" />



    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textFingerprintInstruction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="6dp"
            android:text="@string/txtFingerprintInstruction"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/imageViewFingerprint"
            android:layout_width="225dp"
            android:layout_height="200dp"
            android:layout_x="37dp"
            android:layout_y="241dp"
            android:src="@android:drawable/picture_frame"
            android:layout_below="@+id/textFingerprintInstruction" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/scan"
            android:id="@+id/btnCapture"
            android:layout_marginTop="73dp"
            android:layout_alignTop="@+id/imageViewFingerprint"
            android:layout_alignRight="@+id/textFingerprintInstruction" />

	</RelativeLayout>

        <TextView
            android:id="@+id/textAddInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="6dp"
            android:text="@string/txtAddInfo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true" />


        <EditText
            android:id="@+id/enter_first_name"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/first_name"
            android:layout_width="fill_parent"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/enter_maternal_name"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/maternal_name"
            android:layout_width="fill_parent"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/enter_paternal_name"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/paternal_name"
            android:layout_width="fill_parent"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/enter_dni"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/dni_document"
            android:layout_width="fill_parent"
            android:layout_alignParentLeft="true">
        </EditText>


        <TextView
            android:id="@+id/dob_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="1dp"
            android:paddingTop="6dp"
            android:text="@string/dob"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvwfecha_nacimiento"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_weight="1"
            style="@android:style/Widget.DeviceDefault.Light.Spinner" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opc_search"
            android:id="@+id/btnSearch"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

    </LinearLayout>
